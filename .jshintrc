{

	// environment
	"browser": true,
	"node": true,
	"strict": true,

	"globals": {
		"L": true,
		"$": true
	},

	// code style
	"bitwise": true,
	"camelcase": true,
	"curly": true,
	"eqeqeq": true,
	"forin": false,
	"immed": true,
	"latedef": true,
	"newcap": true,
	"noarg": true,
	"noempty": true,
	"nonew": true,
	"undef": true,
	"unused": true,
	"quotmark": "single",
	"sub": true,

	// whitespace
	"indent": 4,
	"trailing": true,
	"white": true,
	"smarttabs": true,
	"maxlen": false

	// code simplicity - not enforced but nice to check from time to time
	// "maxstatements": 20,
	// "maxcomplexity": 5
	// "maxparams": 4,
	// "maxdepth": 4
}